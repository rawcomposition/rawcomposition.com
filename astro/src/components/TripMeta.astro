---
type Props = {
	length?: string;
	species?: number;
	lifers?: number;
	isUS?: boolean;
	subtitle?: string;
	ebirdLink?: string;
};

const { length, species, lifers, isUS, subtitle, ebirdLink } = Astro.props;
---

{subtitle && <p class="text-gray-500 w-full -mt-3 mb-0">{subtitle}</p>}
{length && (
	<span class="flex items-center gap-2 text-sm text-gray-600 whitespace-nowrap">
		<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="text-sm text-gray-500 icon">
			<path fill="currentColor" d="M232 120C232 106.7 242.7 96 256 96C269.3 96 280 106.7 280 120V243.2L365.3 300C376.3 307.4 379.3 322.3 371.1 333.3C364.6 344.3 349.7 347.3 338.7 339.1L242.7 275.1C236 271.5 232 264 232 255.1L232 120zM256 0C397.4 0 512 114.6 512 256C512 397.4 397.4 512 256 512C114.6 512 0 397.4 0 256C0 114.6 114.6 0 256 0zM48 256C48 370.9 141.1 464 256 464C370.9 464 464 370.9 464 256C464 141.1 370.9 48 256 48C141.1 48 48 141.1 48 256z" />
		</svg>{" "}
		{length}
	</span>
)}
{species && (
	<span class="flex items-center gap-2 text-sm text-gray-600 whitespace-nowrap">
		<svg xmlns="http://www.w3.org/2000/svg" class="text-sm text-gray-500 icon" viewBox="0 0 512 512">
			<path fill="currentColor" d="M278.5 215.6L23 471c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l57-57h68c49.7 0 97.9-14.4 139-41c11.1-7.2 5.5-23-7.8-23c-5.1 0-9.2-4.1-9.2-9.2c0-4.1 2.7-7.6 6.5-8.8l81-24.3c2.5-.8 4.8-2.1 6.7-4l22.4-22.4c10.1-10.1 2.9-27.3-11.3-27.3l-32.2 0c-5.1 0-9.2-4.1-9.2-9.2c0-4.1 2.7-7.6 6.5-8.8l112-33.6c4-1.2 7.4-3.9 9.3-7.7C506.4 207.6 512 184.1 512 160c0-41-16.3-80.3-45.3-109.3l-5.5-5.5C432.3 16.3 393 0 352 0s-80.3 16.3-109.3 45.3L139 149C91 197 64 262.1 64 330v55.3L253.6 195.8c6.2-6.2 16.4-6.2 22.6 0c5.4 5.4 6.1 13.6 2.2 19.8z" />
		</svg>{" "}
		{species} species
	</span>
)}
{lifers && (
	<span class="flex items-center gap-2 text-sm text-gray-600 whitespace-nowrap">
		<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="text-sm text-gray-500 icon">
			<path fill="currentColor" d="M256 512c141.4 0 256-114.6 256-256S397.4 0 256 0S0 114.6 0 256S114.6 512 256 512zM369 209L241 337c-9.4 9.4-24.6 9.4-33.9 0l-64-64c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0l47 47L335 175c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9z" />
		</svg>{" "}
		{lifers}{" "}{isUS ? "US lifers" : "lifers"}
	</span>
)}
{ebirdLink && (
	<a
		href={ebirdLink}
		target="_blank"
		rel="noreferrer"
		class="flex items-center !text-gray-500 whitespace-nowrap no-underline bg-gray-100 text-[13px] leading-3 px-2.5 py-[2px] rounded"
	>
		View on <img src="/ebird.png" class="h-[18px] -mt-[1px] -mr-1.5 inline-block mb-0" alt="eBird" />
	</a>
)}
